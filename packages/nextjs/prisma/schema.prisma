generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Cohort {
    id             String    @id @default(cuid())
    address        String    @unique
    chainId        String?
    adminAddresses String[]
    Project        Project[]
    theme          Json?
    Builder        Builder[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Builder {
    id              String  @id @default(cuid())
    address         String
    githubUsername String?
    cohortId        String
    cohort          Cohort  @relation(fields: [cohortId], references: [id])


    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Project {
    id          String @id @default(cuid())
    name        String
    description String
    githubUrl   String
    websiteUrl  String
    cohortId    String
    cohort      Cohort @relation(fields: [cohortId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
